<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Curtain Animation</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f0f0f0;
            margin: 0;
        }
        .curtain {
            position: absolute;
            width: 50%;
            height: 100%;
            background-color: #8B0000; /* Dark red color */
            transition: transform 1s ease;
            top: 0;
        }
        .left {
            left: 0;
            transform-origin: left;
        }
        .right {
            right: 0;
            transform-origin: right;
        }
        .open .left {
            transform: translateX(-100%);
        }
        .open .right {
            transform: translateX(100%);
        }
        button {
            position: relative;
            z-index: 1;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="curtain left"></div>
    <div class="curtain right"></div>
    <button id="openCurtains">Open Curtains</button>

    <script>
        const button = document.getElementById('openCurtains');
        const curtains = document.querySelector('body');

        button.addEventListener('click', () => {
            curtains.classList.toggle('open');
        });
    </script>

</body>
